{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write",
      "vitest run"
    ]
  },
  "scripts": {
    "build": "nuxt build",
    "dev1": "cross-env HOST=0.0.0.0 nuxt dev",
    "dev": "cross-env HOST=localhost nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prepare": "husky install",
    "lint": "eslint . --ext .js,.ts,.vue",
    "lint:fix": "eslint . --ext .js,.ts,.vue --fix",
    "format": "prettier --write .",
    "prepare-code": "npm run lint && npm run lint:fix && npm run format",
    "test:e2e": "start-server-and-test preview http://localhost:3000 'cypress run --e2e'",
    "test:e2e:dev:open": "start-server-and-test dev http://localhost:3000 'cypress open --e2e'",
    "test:e2e:dev:run": "start-server-and-test dev http://localhost:3000 'cypress run --e2e'",
    "test:e2e:gui": "start-server-and-test preview http://localhost:3000 'cypress open --e2e'",
    "cypress:open": "cypress open --e2e",
    "cypress:run": "cypress run --e2e",
    "cypress:npx:run": "npx cypress run --e2e",
    "cypress:npx:open": "npx cypress open --e2e",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:npx": "npx vitest",
    "test:ui:npx": "npx vitest --ui",
    "test:unit:run": "vitest run utils/__tests__/unit"
  },
  "dependencies": {
    "@nuxt/icon": "^1.13.0",
    "@nuxtjs/color-mode": "^3.5.2",
    "@pinia/nuxt": "^0.11.0",
    "date-fns": "^4.1.0",
    "lodash-es": "^4.17.21",
    "nuxt": "^3.17.1",
    "pinia": "^3.0.2",
    "pinia-plugin-persistedstate": "^4.3.0",
    "typescript": "^5.3.3",
    "vue": "^3.5.14",
    "vue-router": "^4.5.1",
    "vue3-carousel": "^0.15.1"
  },
  "devDependencies": {
    "@cypress/vite-dev-server": "^6.0.3",
    "@cypress/vue": "^6.0.2",
    "@nuxt/test-utils": "^3.19.2",
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@testing-library/vue": "^8.1.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.0.13",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "cross-env": "^7.0.3",
    "cypress": "^14.5.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "happy-dom": "^18.0.1",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "start-server-and-test": "^2.0.12",
    "vitest": "^3.2.4"
  }
}
